{
  "ConnectionStrings": {
    "Default": "Data Source=jobboard.db",
    "RabbitMq": "amqps://rpjqjzap:PASSWORD@rabbit.lmq.cloudamqp.com:5671/rpjqjzap"
  },
  "RabbitMq": {
    "Host": "rabbit.lmq.cloudamqp.com",
    "Port": 5671,
    "UserName": "rpjqjzap",
    "Password": "",
    "VirtualHost": "rpjqjzap",
    "UseSsl": true,
    "QueueName": "job_applications",
    "PrefetchCount": 10
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",

        // EF Core genel loglar
        "Microsoft.EntityFrameworkCore": "Information",
        // Sadece SQL komutlarını görmek istersen bu satır yeterli olurdu:
        "Microsoft.EntityFrameworkCore.Database.Command": "Information",

        // Uygulama adın için de açık bırak
        "JobBoard": "Information"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "shared": true
        }
      }
    ],
    "Properties": {
      "Application": "JobBoard.Api"
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}